{
    "builders": [
        {
            "export_path": "image.tar",
            "image": "yikaus/alpine-bash",
            "type": "docker"
        }
    ],
    "post-processors": [
        {
            "repository": "robbiemckinstry/packer-python",
            "tag": "latest",
            "type": "docker-import"
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "script": "provision.sh",
            "inline": [
                "set -e",
                "echo Hello Alpine!",
                "apk update",
                "apk add alpine-sdk",

                "apk add --update python python-dev py-pip",
                "apk add --update nodejs",
                "sudo npm install -g npm@latest",
                "sudo npm install -g dredd@latest"
            ]
        }
    ]
}
